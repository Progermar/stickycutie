<Window x:Class="StickyCutie.Wpf.InviteDialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gerar convite"
        Width="360"
        Height="200"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#FFFDFDFD">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel>
            <TextBlock Text="Informe o e-mail do convidado (opcional)."
                       Margin="0,0,0,8"/>
            <TextBox x:Name="EmailTextBox"
                     Margin="0,0,0,12"
                     ToolTip="email@exemplo.com"/>
            <TextBlock x:Name="ResultText"
                       Foreground="#555"
                       TextWrapping="Wrap"/>
        </StackPanel>
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="Cancelar"
                    Width="90"
                    Margin="0,0,8,0"
                    IsCancel="True"/>
            <Button Content="Gerar"
                    Width="90"
                    IsDefault="True"
                    Click="GenerateInvite_Click"/>
        </StackPanel>
    </Grid>
</Window>
