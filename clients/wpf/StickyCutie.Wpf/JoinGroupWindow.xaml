<Window x:Class="StickyCutie.Wpf.JoinGroupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Entrar em um grupo"
        Width="420"
        Height="360"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#FFFDFDFD">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel>
            <TextBlock Text="Informe o cÃ³digo recebido do administrador do grupo."
                       TextWrapping="Wrap"
                       Margin="0,0,0,8"/>
            <TextBox x:Name="TokenTextBox"
                     Margin="0,0,0,12"
                     ToolTip="ABC-123"/>
            <TextBlock Text="Seus dados"
                       FontWeight="Bold"
                       Margin="0,4,0,4"/>
            <TextBox x:Name="NameTextBox"
                     Margin="0,0,0,8"
                     ToolTip="Nome completo"/>
            <TextBox x:Name="EmailTextBox"
                     Margin="0,0,0,8"
                     ToolTip="email@exemplo.com"/>
            <TextBox x:Name="PhoneTextBox"
                     Margin="0,0,0,12"
                     ToolTip="Telefone (opcional)"/>
            <Border Background="#FFF5F5F5"
                    Padding="8"
                    BorderBrush="#DDD"
                    BorderThickness="1">
                <TextBlock x:Name="PreviewText"
                           TextWrapping="Wrap"
                           Foreground="#555"/>
            </Border>
        </StackPanel>
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,12,0,0">
            <Button Content="Cancelar"
                    Width="90"
                    Margin="0,0,8,0"
                    IsCancel="True"/>
            <Button Content="Entrar"
                    Width="110"
                    IsDefault="True"
                    Click="JoinButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
