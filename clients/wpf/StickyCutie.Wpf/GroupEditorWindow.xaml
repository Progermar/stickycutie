<Window x:Class="StickyCutie.Wpf.GroupEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Grupo"
        Width="360"
        Height="240"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#FFFDFDFD">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel>
            <TextBlock Text="Nome" FontWeight="SemiBold"/>
            <TextBox x:Name="NameTextBox" Margin="0,4,0,12"/>
            <TextBlock Text="Descrição" FontWeight="SemiBold"/>
            <TextBox x:Name="DescriptionTextBox"
                     Margin="0,4,0,12"
                     Height="80"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"/>
        </StackPanel>
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="Cancelar"
                    Width="90"
                    IsCancel="True"
                    Margin="0,0,8,0"/>
            <Button Content="Salvar"
                    Width="90"
                    IsDefault="True"
                    Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
