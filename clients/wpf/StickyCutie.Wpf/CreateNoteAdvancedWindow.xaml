<Window x:Class="StickyCutie.Wpf.CreateNoteAdvancedWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nova nota"
        Width="420"
        Height="420"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Background="#FFFDFDFD">
    <Grid Margin="18">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel>
            <TextBlock Text="Título"
                       FontWeight="Bold"/>
            <TextBox x:Name="TitleTextBox"
                     Margin="0,4,0,12"/>

            <TextBlock Text="Destinatário"
                       FontWeight="Bold"/>
            <ComboBox x:Name="RecipientCombo"
                      Margin="0,4,0,12"
                      DisplayMemberPath="Name"/>

            <TextBlock Text="Nota inicial (opcional)"
                       FontWeight="Bold"/>
            <TextBox x:Name="InitialTextBox"
                     Margin="0,4,0,12"
                     AcceptsReturn="True"
                     Height="110"
                     TextWrapping="Wrap"/>

            <TextBlock Text="Alarme (opcional)"
                       FontWeight="Bold"/>
            <StackPanel Orientation="Horizontal"
                        Margin="0,4,0,4">
                <DatePicker x:Name="AlarmDatePicker"
                            Width="150"/>
                <TextBox x:Name="AlarmTimeBox"
                         Width="70"
                         Margin="8,0,0,0"
                         VerticalContentAlignment="Center"
                         ToolTip="HH:mm"/>
            </StackPanel>
            <TextBlock Text="Informe data e horário apenas se desejar definir o alarme agora."
                       Foreground="#777"
                       FontSize="11"/>
        </StackPanel>
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,12,0,0">
            <Button Content="Cancelar"
                    Width="110"
                    Margin="0,0,8,0"
                    IsCancel="True"/>
            <Button Content="Criar"
                    Width="110"
                    IsDefault="True"
                    Click="CreateButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
