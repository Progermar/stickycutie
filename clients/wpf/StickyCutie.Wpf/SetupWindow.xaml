<Window x:Class="StickyCutie.Wpf.SetupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bem-vindo ao StickyCutie"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        SizeToContent="WidthAndHeight"
        WindowStyle="ToolWindow"
        Background="#FFFDFDFD">
    <Border Padding="28"
            Background="#FFFDFDFD">
        <StackPanel Width="360">
            <TextBlock Text="Configurar administrador"
                       FontSize="20"
                       FontWeight="Bold"
                       Margin="0,0,0,12"/>
            <TextBlock Text="Criaremos o primeiro usuário administrador. Ele poderá criar grupos e notas através das Configurações (⚙)."
                       Margin="0,0,0,18"
                       Foreground="#555555"
                       TextWrapping="Wrap"/>
            <TextBlock Text="Nome"
                       FontWeight="SemiBold"/>
            <TextBox x:Name="UserNameTextBox"
                     Margin="0,2,0,12"/>
            <TextBlock Text="E-mail"
                       FontWeight="SemiBold"/>
            <TextBox x:Name="UserEmailTextBox"
                     Margin="0,2,0,12"/>
            <TextBlock Text="Telefone"
                       FontWeight="SemiBold"/>
            <TextBox x:Name="UserPhoneTextBox"
                     Margin="0,2,0,24"/>
            <TextBlock Text="Senha"
                       FontWeight="SemiBold"/>
            <PasswordBox x:Name="PasswordBox1"
                         Margin="0,2,0,12"/>
            <TextBlock Text="Confirmar senha"
                       FontWeight="SemiBold"/>
            <PasswordBox x:Name="PasswordBox2"
                         Margin="0,2,0,24"/>
            <Button Content="Concluir"
                    Width="140"
                    HorizontalAlignment="Left"
                    Click="UserNextButton_Click"/>
        </StackPanel>
    </Border>
</Window>
