<Window x:Class="StickyCutie.Wpf.UserEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Usuário"
        Width="440"
        MinWidth="360"
        Height="420"
        MinHeight="360"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResizeWithGrip"
        Background="#FFFDFDFD">
    <Grid Margin="18">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0"
                        Margin="0,0,0,12">
                <TextBlock Text="Nome" FontWeight="SemiBold"/>
                <TextBox x:Name="NameTextBox" Margin="0,4,0,0"/>
            </StackPanel>

            <StackPanel Grid.Row="1"
                        Margin="0,0,0,12">
                <TextBlock Text="E-mail" FontWeight="SemiBold"/>
                <TextBox x:Name="EmailTextBox" Margin="0,4,0,0"/>
            </StackPanel>

            <StackPanel Grid.Row="2"
                        Margin="0,0,0,12">
                <TextBlock Text="Telefone" FontWeight="SemiBold"/>
                <TextBox x:Name="PhoneTextBox" Margin="0,4,0,0"/>
            </StackPanel>

            <CheckBox x:Name="AdminCheckBox"
                      Grid.Row="3"
                      Content="Usuário administrador"
                      Margin="0,0,0,12"/>

            <StackPanel Grid.Row="4"
                        Margin="0,0,0,12">
                <TextBlock x:Name="PasswordLabel" FontWeight="SemiBold"/>
                <PasswordBox x:Name="PasswordBox" Margin="0,4,0,0"/>
            </StackPanel>

            <StackPanel Grid.Row="5">
                <TextBlock x:Name="PasswordConfirmLabel" FontWeight="SemiBold"/>
                <PasswordBox x:Name="PasswordConfirmBox" Margin="0,4,0,12"/>
            </StackPanel>
        </Grid>

        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="Cancelar"
                    Width="110"
                    Margin="0,0,8,0"
                    IsCancel="True"/>
            <Button Content="Salvar"
                    Width="110"
                    IsDefault="True"
                    Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
