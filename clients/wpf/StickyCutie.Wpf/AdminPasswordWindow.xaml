<Window x:Class="StickyCutie.Wpf.AdminPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Autenticação do administrador"
        Width="320"
        Height="200"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#FFFDFDFD">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel>
            <TextBlock Text="Digite a senha do administrador atual para acessar as configurações."
                       TextWrapping="Wrap"
                       Margin="0,0,0,12"/>
            <PasswordBox x:Name="AdminPasswordBox"
                         Margin="0,4,0,4"/>
        </StackPanel>
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="Cancelar"
                    Width="90"
                    Margin="0,0,8,0"
                    IsCancel="True"/>
            <Button Content="Confirmar"
                    Width="90"
                    IsDefault="True"
                    Click="ConfirmButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
