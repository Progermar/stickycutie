<UserControl x:Class="StickyCutie.Wpf.NoteOptionsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="220" Height="90">
    <StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,8">
            <Button Width="28" Height="20" Margin="4,0" Background="#FFFBE380" BorderBrush="#B0A35A" Click="ColorButton_Click" Tag="#FFFBE380|#B0A35A"/>
            <Button Width="28" Height="20" Margin="4,0" Background="#E8F4E8" BorderBrush="#5FA863" Click="ColorButton_Click" Tag="#E8F4E8|#5FA863"/>
            <Button Width="28" Height="20" Margin="4,0" Background="#E7F2FF" BorderBrush="#5A95CC" Click="ColorButton_Click" Tag="#E7F2FF|#5A95CC"/>
            <Button Width="28" Height="20" Margin="4,0" Background="#FFEAF2" BorderBrush="#C76A9A" Click="ColorButton_Click" Tag="#FFEAF2|#C76A9A"/>
            <Button Width="28" Height="20" Margin="4,0" Background="#ECEAF8" BorderBrush="#7A6FB3" Click="ColorButton_Click" Tag="#ECEAF8|#7A6FB3"/>
        </StackPanel>
        <TextBlock x:Name="CreatedText" HorizontalAlignment="Center" Foreground="#777"/>
    </StackPanel>
</UserControl>