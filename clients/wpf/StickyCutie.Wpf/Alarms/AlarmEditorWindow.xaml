<Window x:Class="StickyCutie.Wpf.Alarms.AlarmEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Alarme"
        Width="360"
        Height="260"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#FFFDFDFD">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel>
            <TextBlock Text="Data"
                       FontWeight="SemiBold"/>
            <DatePicker x:Name="DatePicker"
                        Margin="0,4,0,12"/>
            <TextBlock Text="Hora (HH:mm)"
                       FontWeight="SemiBold"/>
            <TextBox x:Name="TimeTextBox"
                     Margin="0,4,0,12"/>
        </StackPanel>
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="Remover alarme"
                    x:Name="RemoveButton"
                    Width="120"
                    Margin="0,0,8,0"
                    Click="RemoveButton_Click"/>
            <Button Content="Cancelar"
                    Width="90"
                    Margin="0,0,8,0"
                    IsCancel="True"/>
            <Button Content="Salvar"
                    Width="90"
                    IsDefault="True"
                    Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
