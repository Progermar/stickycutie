<Window x:Class="StickyCutie.Wpf.Alarms.AlarmSnoozeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Adiar alarme"
        Width="300"
        Height="260"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#FFFDFDFD">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel>
            <TextBlock Text="Lembrar novamente em:"
                       FontWeight="SemiBold"
                       Margin="0,0,0,8"/>
            <ComboBox x:Name="PresetCombo"
                      SelectedIndex="1"
                      Margin="0,0,0,12">
                <ComboBoxItem Content="1 minuto" Tag="1"/>
                <ComboBoxItem Content="5 minutos" Tag="5"/>
                <ComboBoxItem Content="10 minutos" Tag="10"/>
                <ComboBoxItem Content="15 minutos" Tag="15"/>
                <ComboBoxItem Content="30 minutos" Tag="30"/>
                <ComboBoxItem Content="1 hora" Tag="60"/>
                <ComboBoxItem Content="2 horas" Tag="120"/>
                <ComboBoxItem Content="Personalizado" Tag="custom"/>
            </ComboBox>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                <TextBlock Text="Personalizado (min)"
                           VerticalAlignment="Center"
                           Margin="0,0,8,0"/>
                <TextBox x:Name="CustomMinutesBox"
                         Width="60"/>
            </StackPanel>
        </StackPanel>
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="Cancelar"
                    Width="90"
                    Margin="0,0,8,0"
                    IsCancel="True"/>
            <Button Content="Confirmar"
                    Width="90"
                    IsDefault="True"
                    Click="ConfirmButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
