<Window x:Class="StickyCutie.Wpf.Alarms.AlarmAlertWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Alarme da nota"
        Width="320"
        Height="220"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#FFFDFDFD">
    <Grid Margin="18">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel>
            <TextBlock Text="Alarme da nota"
                       FontSize="18"
                       FontWeight="Bold"
                       Margin="0,0,0,8"/>
            <TextBlock x:Name="TitleText"
                       FontWeight="SemiBold"
                       Margin="0,0,0,6"/>
            <TextBlock x:Name="BodyPreview"
                       TextWrapping="Wrap"
                       Foreground="#555"/>
        </StackPanel>
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,12,0,0">
            <Button Content="Adiar"
                    Width="100"
                    Margin="0,0,8,0"
                    Click="SnoozeButton_Click"/>
            <Button Content="Parar"
                    Width="100"
                    Click="StopButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
